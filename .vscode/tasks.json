{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile current file",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-Wall",
                "-Wextra",
                "-lssh2"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}